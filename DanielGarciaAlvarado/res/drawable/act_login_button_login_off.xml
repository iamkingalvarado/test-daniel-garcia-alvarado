<?xml version="1.0" encoding="utf-8"?>

<!-- XML correspondiente al estilo del boton de la pantalla de login en su estado normal -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape  android:shape="rectangle">
        <solid android:color="@color/register_button_shape" />
        <corners android:radius="3dp" />
    </shape>
</item>
<item android:bottom="3px" android:right="3px">
    <shape  android:shape="rectangle">
    <solid android:color="@color/register_button_background" />
    <corners android:radius="3dp" />
    </shape>
</item>
</layer-list>