<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:background="@drawable/item_client_background">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="sans-serif"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:id="@+id/item_client_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:layout_below="@id/item_client_name"
        android:id="@+id/item_client_rfc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="sans-serif"
        android:textSize="22sp"
        android:layout_below="@id/item_client_rfc"
        android:id="@+id/item_client_vendor"
        android:layout_alignParentBottom="true"
        android:gravity="right"/>

</RelativeLayout>
